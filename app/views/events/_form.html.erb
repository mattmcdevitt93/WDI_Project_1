<%= form_for(@event) do |f| %>

    <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :event %><br>
    <%= f.text_field :event %>
  </div>
  <div class="field">
    <%= f.label :event_type %><br>
    <%= f.select(:event_type, ['Team Event', 'Organization Event'], {include_blank: "Select something"}) %>
  </div>
  <div class="field">
  <%= f.label "Start Time and Date" %><br>
  <%= f.datetime_select :event_time_start, ampm: true %>
  </div>
  <div class="field">
  <%= f.label "Finish Time and Date" %><br>
  <%= f.datetime_select :event_time_finish, default: 3.days.from_now, ampm: true %>
  </div>
  <div class="field">
  <%= f.label :location %><br>
  <%= f.text_field :location %>
  </div>
  <div class="field">
  <%= f.label :slots %><br>
  <%= f.text_field :slots %>
  </div>
  <div class="field">
  <%= f.hidden_field :created_by, :value => @user %>
  <%= f.hidden_field :jobs_count, :value => 0 %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: 'btn btn-default' %>
  </div>
<% end %>
