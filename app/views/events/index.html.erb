<table class="index_table">
<tr>
  <th> #id </th>
  <th> Event Name </th>
  <th> Event Type </th>
  <th></th>
</tr>
<% @events.each do |event| %>
  <tr>
    <td><%= event.id %></td>
    <td><%= event.event %></td>
    <td><%= event.event_type %></td>
    <td><button type="button" class="btn btn-default btn-block"><%= link_to 'Show', event %></button>
    <button type="button" class="btn btn-default"><%= link_to 'Edit', edit_event_path(event) %></button>
    <button type="button" class="btn btn-warning"><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
  </tr>
<% end %>
</table>
<button type="button" class="btn btn-default"><%= link_to 'New event', new_event_path %></button>

<button type="button" class="btn btn-default"><%= link_to 'Back', root_path %></button>
